generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum timeOff {
  Personal
  Holiday
  Maternity
  SickLeave
  OnCall
}

model Employee {
  id          String    @id @default(cuid())
  userId      String
  name        String
  email       String    @unique
  jobTitle    String
  dateStarted DateTime
  payrollId   String
  hourlyRate  String
  imageUrl    String
  shifts      Shift[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Shift {
  id          String    @id @default(cuid())
  employeeId  String
  employee    Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  date        DateTime
  department  String?
  shiftTime   String?
  timeOff     timeOff?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}